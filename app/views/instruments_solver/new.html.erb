<section class="h-full bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
      <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Solve the instrument</h2>
      <form action="<%= instruments_solver_index_path %>", method="post">
          <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
            <% @application.instrument.questions.each_with_index do |question, index| %>
              <div class="w-full col-span-2">
                  <label for="text" class="block mb-2 text-md font-medium text-gray-900 dark:text-white"><%= question.text %></label>
              </div>
              <div class="w-full col-span-2">
                <% question.answers.each do |answer| %>

                  <input id="<%= "question_#{index + 1}_answer" %>" type="radio" name="<%= "question_#{index + 1}_answer" %>" value="<%= answer.points %>" class="w-4 h-4 border-gray-300 focus:ring-2 focus:ring-blue-300 dark:focus:ring-blue-600 dark:focus:bg-blue-600 dark:bg-gray-700 dark:border-gray-600" checked>
                  <label for="<%= "question_#{index + 1}_answer" %>" class="ms-2  text-sm font-medium text-gray-900 dark:text-gray-300">
                    <%= answer.text %>
                  </label>
                  <br>
                <% end %>
              </div>
            <% end %>
            <input type="hidden" id="application" name="application" value="<%= @application.id %>">
              <div></div>
              <div></div>
          <button type="submit" class="mb-4 py-2 px-3 flex items-center text-sm font-medium text-center text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
              Submit
          </button>
      </form>
  </div>
</section>

