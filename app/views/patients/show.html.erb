<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
  </div>
</div>


<div class="overflow-y-auto overflow-x-hidden top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-modal md:h-full">
  <div class="relative pl-1 pb-4 w-full max-w-xl h-full md:h-auto">
      <div class="relative p-4 bg-white rounded-lg shadow dark:bg-gray-800 sm:p-5">
              <div class="flex justify-between mb-4 rounded-t sm:mb-5">
                  <div class="text-lg text-gray-900 md:text-xl dark:text-white">
                      <h3 class="font-semibold ">
                        Patient
                      </h3>
                      <p class="font-bold">
                        <%= @patient.name %>
                      </p>
                  </div>
              </div>
              <dl>
                  <dt class="mb-2 font-semibold leading-none text-gray-900 dark:text-white">Email</dt>
                  <dd class="mb-4 font-light text-gray-500 sm:mb-5 dark:text-gray-400"><%= @patient.email %></dd>
                  <dt class="mb-2 font-semibold leading-none text-gray-900 dark:text-white">CPF</dt>
                  <dd class="mb-4 font-light text-gray-500 sm:mb-5 dark:text-gray-400"><%= @patient.cpf %></dd>
                  <dt class="mb-2 font-semibold leading-none text-gray-900 dark:text-white">Date of birth</dt>
                  <dd class="mb-4 font-light text-gray-500 sm:mb-5 dark:text-gray-400"><%= @patient.birthdate %></dd>
              </dl>
              <div class="flex justify-between items-center">
                  <div class="flex items-center space-x-3 sm:space-x-4">
                      <a href="<%= edit_patient_path(@patient) %>" class="text-white inline-flex items-center bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                          <svg aria-hidden="true" class="mr-1 -ml-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z"></path><path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd"></path></svg>
                          Edit
                      </a>               
                      <a href="<%= patients_path %>" type="button" class="py-2.5 px-5 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
                          Back to Patients
                      </a>
                  </div>
                  <span>
                    <%= link_to "Send an instrument to this patient", new_instruments_applier_path(patient_id: @patient), class: "inline-flex items-center text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-900" %>
                  </span>              
                  <span>
                    <%= button_to "Delete", patient_path(@patient), method: :delete, class: "inline-flex items-center text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-900" %>
                  </span>
              </div>
      </div>
  </div>
</div>