<section class="h-full bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
      <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Application result</h2>
        <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
          
        <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Total Score: <%= @application.score %></h2>
        <div></div>
        <a href="<%= instruments_applications_path %>" type="button" class="py-2.5 px-5 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
          Back to Instrument Applications
        </a>
        <span>
          <%= button_to "Delete", instruments_application_path(@application), method: :delete, class: "inline-flex items-center text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-900" %>
        </span>
  </div>
</section>

