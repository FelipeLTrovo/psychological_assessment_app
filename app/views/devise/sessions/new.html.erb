<div class='col-start-2 text-center bg-teal-500 text-white shadow-md rounded px-8 pt-6 pb-8 mt-4 mb-4 ml-28 w-full max-w-xs'>

  <h2 class='font-semibold text-xl tracking-tight mt-6'>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-black w-full mt-4' %>
    <%= f.label :email %><br />
    </div>

    <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class: 'text-black w-full mt-4' %>
    <%= f.label :password %><br />
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field w-full mt-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'ml-2' %>
      </div>
    <% end %>

    <div class="inline-block text-sm px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-teal-500 hover:bg-white mt-4 lg:mt-4">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>